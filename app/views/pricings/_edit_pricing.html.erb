<%= form_for @pricing, :html => { :class => 'form-horizontal' } do |f| %>
	  <div class="control-group alert alert-info">
	   	Group Name:<%= @pricing.group_name %>
	  </div>
	  <div class="well">
		  <div class="control-group">
		    <%= f.label "Tier 1:", :class => 'control-label' %>
		      <div class="controls">
		      	  <%= f.text_field :tier_1 %>         
		      </div>
		  </div>

		  <div class="control-group">
		    <%= f.label "Tier 2:", :class => 'control-label' %>
		      <div class="controls">
		      	  <%= f.text_field :tier_2 %>         
		      </div>
		  </div>

		  <div class="control-group">
		    <%= f.label "Tier 3:", :class => 'control-label' %>
		      <div class="controls">
		      	  <%= f.text_field :tier_3 %>         
		      </div>
		  </div>
		</div>



	  <div class="form-actions">
	    <%= f.button :submit, :class => 'btn btn-primary' %>
	    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
	                pricings_path, :class => 'btn' %>
	  </div>
	<% end %>
