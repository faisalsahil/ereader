<%= form_for @mandrill_setting, :html => { :class => 'form-horizontal' } do |f| %>
  
  <div class="control-group">
    <%= f.label "Approval email subject:", :class => 'control-label' %>
      <div class="controls">
          <%= f.text_field :apr_subject %>
          <% if @list_template.present? %>
            <b><%= "Templates: "%></b><%= f.select :apr_tempate, [['Select Template', '']].concat(@list_template) %>
        <%end%>
      </div>
  </div>
  <div class="control-group">
    <%= f.label "Rejection email subject:", :class => 'control-label' %>
      <div class="controls">
      	 <%= f.text_field :rem_subject %>
          <% if @list_template.present? %>
            <b><%= "Templates: "%></b><%= f.select :rem_template, [['Select Template', '']].concat(@list_template) %>
        <%end%>
          
      </div>
  </div>
  <div class="control-group">
    <%= f.label "From Name:", :class => 'control-label' %>
      <div class="controls">
      	  <%= f.text_field :from_name %>         
      </div>
  </div>

<div class="control-group">
    <%= f.label "From Email:", :class => 'control-label' %>
      <div class="controls">
      	  <%= f.text_field :from_email %>         
      </div>
  </div>
  <div class="form-actions">
      <%= f.submit :submit, :class => 'btn btn-primary', :value=>"Create Mandrill Settings" %>
    </div>
<% end %>
