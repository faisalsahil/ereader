<%= simple_form_for @key_mandrill, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :key %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary', :value=>"Submit" %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                root_url, :class => 'btn' %>
  </div>
<% end %>
